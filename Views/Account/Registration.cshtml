@model ETickets.ViewModel.ApplicationUserVM

@{
    ViewData["Title"] = "Registration";
}





<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Page Title</title>
    <!-- Include any external CSS files -->
    <link rel="stylesheet" href="/css/New.css">
    <link rel="stylesheet" href="/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-KYd0BKFip0N3ZWgJfKcxKz4VqOen+LeThInO+RE4BwZZ/zByMmZX5DvduBddajVoz/SqLxhGS+mra2TcdWVrsQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body class="background" style="margin-top:100px;">

    <div class="ms-4">
        <br />
        <h1 style="color:white;">Sign in</h1>
        <br />
        <form asp-controller="Account" asp-action="Registration" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <h4>
                    <label asp-for="Name" class="control-label color"></label>
                </h4>
                <input asp-for="Name" class="form-control item-background w-50 white-on-focus" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <h4>
                    <label asp-for="Email" class="control-label color"></label>
                </h4>
                <input asp-for="Email" class="form-control item-background w-50 white-on-focus" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <h4>
                    <label asp-for="Password" class="control-label color"></label>
                </h4>
                <input asp-for="Password" class="form-control item-background w-50 white-on-focus" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <h4>
                    <label asp-for="PasswordConfirmed" class="control-label color"></label>
                </h4>
                <input asp-for="PasswordConfirmed" class="form-control item-background w-50 white-on-focus" />
                <span asp-validation-for="PasswordConfirmed" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-light btn-background" />
            </div>
        </form>
        <br />
        <a style="color:white; font-size:14px;" href="/Account/Login">already have an account?</a>
    </div>


</body>
</html>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
